<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登陆界面的edittext的样式-->
    <style name="EditText">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="PaasWordEditText">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="Title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12.5dp</item>
        <item name="android:gravity">center_horizontal|center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!--注册界面的edittext的样式-->
    <style name="RegisterEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--注册界面的TextView的样式-->
    <style name="RegisterTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="VerticalLine">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorpic</item>
    </style>

    <!--textview的样式-->
    <style name="TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">#333333</item>
    <item name="android:textSize">16dp</item>
    </style>

    <style name="ImageArrowRight">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@mipmap/arrow_right</item>
    </style>

    <style name="Backward_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">12.5dp</item>
        <item name="android:background">@mipmap/back</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
